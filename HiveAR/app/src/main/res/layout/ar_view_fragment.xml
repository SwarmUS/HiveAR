<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ARViewFragment">

    <fragment android:name="com.google.ar.sceneform.ux.ArFragment"
        android:id="@+id/ux_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textSize="24sp"
        android:id="@+id/debug_info"/>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/robot_ar_selected"
        android:padding="10dp"
        android:background="@drawable/round_corner_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/robotname"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:textAlignment="viewStart"
            android:layout_weight="1"
            android:id="@+id/robot_ar_selected_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uid"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            android:layout_weight="1"
            android:id="@+id/robot_ar_selected_uid"/>

    </LinearLayout>

</FrameLayout>