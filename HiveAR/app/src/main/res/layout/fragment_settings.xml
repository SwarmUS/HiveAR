<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.SettingsFragment"
    android:id="@+id/settings_view">

    <!--In this fragment, show which database to load , plus create new one-->
    <!--In this fragment, show option to show scan qr code in ar view-->

    <!-- This button should be in ArView-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_qrcode"
        android:id="@+id/scan_qr_code"
        app:fabCustomSize="64dp"
        app:maxImageSize="32dp"
        android:contentDescription="@string/switch_to_scan_qr_code_page" />

</FrameLayout>