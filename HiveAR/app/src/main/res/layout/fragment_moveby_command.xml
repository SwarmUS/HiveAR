<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x_offset"
            android:textSize="22sp"
            android:layout_alignParentStart="true"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/x_offset_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:inputType="numberDecimal"
            android:layout_alignParentEnd="true"
            android:autofillHints="Offset"
            android:hint="@string/offset"
            android:padding="10dp"
            android:textAlignment="center"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/y_offset"
            android:textSize="22sp"
            android:layout_alignParentStart="true"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/y_offset_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="6"
            android:inputType="numberDecimal"
            android:layout_alignParentEnd="true"
            android:autofillHints="Offset"
            android:hint="@string/offset"
            android:padding="10dp"
            android:textAlignment="center"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foreground="@android:drawable/ic_menu_send"
        android:layout_gravity="end"
        android:id="@+id/send_command_button"/>


</LinearLayout>